<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="inv" transaction-type="RESOURCE_LOCAL">
		<class>sys.ecom.model.Category</class>
		<class>sys.ecom.model.Product</class>
		<class>sys.ecom.model.ProductImage</class>
		<class>sys.ecom.model.ProductProperties</class>
		<class>sys.ecom.model.Properties</class>
		<class>sys.ecom.model.SubCategory</class>
		<class>sys.ecom.model.Address</class>
		<class>sys.ecom.model.Invoice</class>
		<class>sys.ecom.model.InvoiceProduct</class>
		<class>sys.ecom.model.User</class>
		<properties>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecom"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.jdbc.password" value=""/>
		</properties>
	</persistence-unit>
</persistence>
